<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_academico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Periodo académico:" />
                <EditText
                    android:id="@+id/txt_academico"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="Ingrese dato"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_escuela"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Escuela Profesional:" />
                <EditText
                    android:id="@+id/txt_escuela"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="Ingrese dato"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_cod_asignatura"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Código de la asignatura:" />
                <EditText
                    android:id="@+id/txt_cod_asignatura"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="Ingrese dato"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_nom_asignatura"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Nombre de la asignatura:" />
                <EditText
                    android:id="@+id/txt_nom_asignatura"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="Ingrese dato"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_semestre"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Semestre:" />
                <EditText
                    android:id="@+id/txt_semestre"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="Ingrese dato"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_duracion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Código de la asignatura:" />
                <EditText
                    android:id="@+id/txt_duracion"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:hint="Ingrese dato"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="50dp"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_size_mas"
                    android:layout_width="10dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="-"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/sizeF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="15" />
                <Button
                    android:id="@+id/btn_size_menos"
                    android:layout_width="10dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="+"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="50dp"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_ital"
                    android:layout_width="10dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:text="italica"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/btn_bold"
                    android:layout_width="10dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="bold"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="50dp"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/color_red"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:backgroundTint="#F44336"
                    android:gravity="center" />

                <Button
                    android:id="@+id/color_blue"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:backgroundTint="#3F51B5"
                    android:gravity="center" />

                <Button
                    android:id="@+id/color_green"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:backgroundTint="#4CAF50"
                    android:gravity="center" />

                <Button
                    android:id="@+id/color_yellow"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:backgroundTint="#FFC107"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/color"
                    android:layout_width="10dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="#ffff"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>